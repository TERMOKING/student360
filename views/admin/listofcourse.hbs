


<div class="col-lg-12">
    <h4 style="text-align: center;">Add Course</h4>      
<div class="main">

  <form class="row g-3" onsubmit="submitForm({{courseAddStatus}})"  method="POST" > 
      <h5 class="card_subheadding">Course Details :</h5>
      <div class="col-md-6">
        <label for="fname" class="form-label">Course Name</label>
        <input type="text" class="form-control" name="coursename" required>
      </div>
      <div class="col-md-6">
        <label for="lname" class="form-label">Course id</label>
        <input type="text" class="form-control" placeholder="eg:CP01 ,CP02" name="courseid" required>
      </div>
    <div>
      <button type="reset" class="btn btn-danger">  Reset  </button>
      <button  class="btn btn-success" type="submit" value="Submit">Submit</button>
    </div>
    </form>
        <p style="color:rgb(23, 201, 23) ;">*{{courseAddStatus}}</p>
    </div>
</div> 
    

<br><br><br><br>
   <div class="col-lg-12">
 
    <h5>COURSES</h5>
<table class="table table-bordered hover">
  <thead>
  <tr>
    <th>sl</th>
    <th >Course ID</th>
    <th>Course Name</th>
    <th>1st year</th>
    <th>2nd year</th>
    <th>3rd year</th>

  </tr>
  </thead>
<tbody>

  {{#each course}}
  <tr>
    <td class="tdnumber"></td>
     <td>{{this.courseid}}</td>
    <td>{{this.coursename}}</td> 
    <td>{{this.firstyear}}</td>
    <td>{{this.secondyear}}</td>
    <td>{{this.thirdyear}}</td>
  {{/each}}
</tbody>
</table>
</div>

  </div>

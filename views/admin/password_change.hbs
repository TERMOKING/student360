<div class="mainDiv">
  <div class="cardStyle">
    <form action="/settings" method="post"  id="signupForm" >
      
{{!-- <img class="logo" src="https://s3-us-west-2.amazonaws.com/shipsy-public-assets/shipsy/SHIPSY_LOGO_BIRD_BLUE.png" id="signupLogo"/> --}}
      
      <h2 class="formTitle">
        Change login password
      </h2>

      <div class="inputDiv">
      <label class="inputLabel" for="password">Current Password</label>
      <input class="inputf" type="password" id="password" name="currentpassword" required>
    </div>
      
    <div class="inputDiv">
      <label class="inputLabel" for="password">New Password</label>
      <input class="inputf" type="password" id="password" name="newpassword" required>
    </div>
      
    <div class="inputDiv">
      <label class="inputLabel" for="confirmPassword">Confirm Password</label>
      <input class="inputf" type="password" id="confirmPassword" name="confirmpassword"required>
    </div>
    
    <div class="buttonWrapper">
      <button type="submit" id="submitButton" onclick="#" class="submitButton">
        <span>Continue</span>
         {{!-- <span id="loader"></span> --}}
      </button>
    </div>
      
  </form>
  {{#if status.confirmPasswordError}}
<p style="color:red;text-align:center;margin-top:5px">New Password and Confirm Password doesn't match<p>
{{else if status.currentPasswordError}}
<p style="color:red;text-align:center;margin-top:5px">Current password doesn't match<p>
{{else if status.passwordChange}}
  {{!-- <p style="color:rgb(52, 136, 32);text-align:center;margin-top:5px">Password changed succesfully</p> --}}
  <script>
    Swal.fire({
  title: 'Password Changed',
  icon: 'success',
  timer: 4000,
   showCancelButton: false,
}).then((result) => {
  if (result.isConfirmed) {
      window.location='/dashboard'
  }
})

</script>


{{/if}}
  </div>
</div>





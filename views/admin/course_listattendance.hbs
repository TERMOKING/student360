
<h2>View Attendance</h2>
{{#each course}}
<div class="card text-center" class="col-lg-12">
  
  <div class="card-header" class="row" >
    <ul class="nav nav-tabs card-header-tabs">
      <h2 style="color: rgb(47, 47, 78);text-transform:uppercase;">{{this.courseid}}</h2>
  
    </ul>
  </div>
  <div class="card-body" class="row">

<div class="col">
  <button onclick="parent.location='/dashboard/attendance/viewattendance?course={{this.courseid}}&year=1'"class="dashat">
      <div class="card__body">
        <div class="right_sec">
          <div class="round_body">100
          </div>
        </div>
        <div class="titleat"> First year</div>
        <div class="card__descat">
          Absent:12 <br>
          Present:23
        </div>
      </div>
    </button>
</div>

<div class="col">
  <button onclick="parent.location='/dashboard/attendance/viewattendance?course={{this.courseid}}&year=2'"class="dashat">
      <div class="card__body">
        <div class="right_sec">
          <div class="round_body">100
          </div>
        </div>
        <div class="titleat">Second year</div>
        <div class="card__descat">
          Absent:12 <br>
          Present:23
        </div>
      </div>
    </button>
</div>

<div class="col">
  <button onclick="parent.location='/dashboard/attendance/viewattendance?course={{this.courseid}}&year=3'"class="dashat">
      <div class="card__body">
        <div class="right_sec">
          <div class="round_body">100
          </div>
        </div>
        <span class="titleat"> Third year</span>
        <div class="card__descat">
          Absent:12 <br>
          Present:23
        </div>
      </div>
    </button>
</div>

  <div class="col">
  <div  class="dashat">
      <form action="/dashboard/attendance/viewattendancebymonth?course={{this.courseid}}" method="POST">
      <spam style="font-size:18px">PREVIOUS RECORDS</span>
      <span style="font-size:14px" >YEAR :</span>
      <label for="year">1</label>
      <input type="radio" value=1 name="year"required>
      <label for="year">2</label>
      <input type="radio" value=2 name="year">
      <label for="year">3</label>
      <input type="radio" value=3 name="year">
      <input  style="border-radius:5px;color:rgb(29, 98, 247);margin-top:17px;width:150px; border-color:rgb(0, 119, 255)"type="month" name="date" required>
      <input class="btn btn-success" style="height:32px;" type="submit" value="view" >
      </form>
    </div>
</div>
  </div>
</div>

{{/each}}